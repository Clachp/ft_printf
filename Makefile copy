NAME = libftprintf.a

CC = gcc

CFLAGS = -Wall -Wextra -Werror

SRCDIR = src

OBJDIR = obj

OBJS = $(OBJDIR)/main.o

SRCS = $(shell find $(SRCDIR) -name "*.c") \
main.c \
ft_printf.c \

OBJS = $(SRCS:%.c=obj/%.o)

all: $(NAME)

$(NAME): $(OBJS)
	ar rc $(NAME) $^

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all bonus clean fclean re
